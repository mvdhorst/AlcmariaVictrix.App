<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlcmariaVictrix.Shared.Views.NewsItemView"
            Title="{Binding Title}">
	<StackLayout>
    <Label Text="{Binding Title}" VerticalOptions="Center" HorizontalOptions="Center"  ></Label>
    <WebView Source="{Binding HtmlSource}"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
    </WebView>
  </StackLayout>
</ContentPage>